from flask import Flask, request, jsonify
from flask_cors import CORS

app = Flask(__name__)
CORS(app)

@app.route("/ask", methods=["POST"])
def ask_money():
    data = request.json

    amount = data.get("amount")
    currency = data.get("currency")
    question = data.get("question")

    # Simple AI-style logic (you can improve later)
    answer = f"""
Based on your selected currency ({currency}) and amount ({amount}),
here is a financial insight:

If you are asking: "{question}"

Advice:
- Always budget before spending {currency}.
- Track your expenses in {currency}.
- Consider saving at least 20% of your {currency} income.
"""

    return jsonify({"answer": answer})

if __name__ == "__main__":
    app.run(debug=True)

